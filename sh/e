# e = Run Homebrew Emacs, like on a ./pb proxy of the Paste Buffer, and with less Spam

emacs=/opt/homebrew/bin/emacs
if [ $# -ne 0 ]; then
    set -xe
    $emacs --no-splash -nw --eval '(menu-bar-mode -1)' "$@"
else
    set -xe
    pbpaste >./pb
    $emacs --no-splash -nw --eval '(menu-bar-mode -1)' ./pb
    pbcopy <./pb
fi
